%a.navbar-brand{href: "/admin"}
  .logo-image

.login_name_display
  %i.fas.fa-exclamation-triangle
  %span
    %b 管理者用ページです

%button.navbar-toggler{"aria-controls" => "navbarNavDropdown", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNavDropdown", "data-toggle" => "collapse", type: "button"}
  %span.navbar-toggler-icon
#navbarNavDropdown.collapse.navbar-collapse
  %ul.navbar-nav.ml-auto
    - if admin_signed_in?
      %li
        = link_to admin_root_path, class: 'nav-link header-link' do
          %i.fas.fa-users
          %b ユーザー一覧
      %li
        = link_to admin_posts_path, class: 'nav-link header-link' do
          %i.fas.fa-user-friends
          %b 投稿一覧
      %li
        = link_to tags_index_admin_posts_path, class: 'nav-link header-link' do
          %i.fas.fa-clipboard-check
          %b タグ一覧
      %li
        = link_to destroy_admin_session_path, method: :delete, class: 'nav-link header-link' do
          %i.fas.fa-sign-in-alt
          %b ログアウト
    - else
      %li
        = link_to about_path, class: 'nav-link header-link' do
          %i.fas.fa-question-circle
          %b About
      %li
        = link_to posts_path, class: 'nav-link header-link' do
          %i.fas.fa-horse-head
          %b 投稿一覧
      %li
        = link_to new_user_registration_path, class: 'nav-link header-link' do
          %i.fas.fa-user-plus
          %b 新規登録
      %li
      %li
        = link_to new_user_session_path, class: 'nav-link header-link' do
          %i.fas.fa-sign-in-alt
          %b ログイン
        %ul.navbar-nav
    %ul.navbar-nav
      .d-flex.justify-content-end.h-100
        = form_with url: search_path, method: :get, class: 'search-form' do |f|
          #search-wrap
            = f.text_field :content, id: "search-text", placeholder: "キーワードで検索..."
            = f.submit '', class: "search-submit"

