%a.navbar-brand{href: "/admin"}
  .img

.to_user_message
  %i.fas.fa-exclamation-triangle
  %span
    %b 管理者用ページです

%button.navbar-toggler{"aria-controls" => "navbarNavDropdown", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNavDropdown", "data-toggle" => "collapse", type: "button"}
  %span.navbar-toggler-icon
#navbarNavDropdown.collapse.navbar-collapse
  %ul.navbar-nav.ml-auto
    - if admin_signed_in?
      %li
        = link_to admin_root_path, class: 'nav-link text-dark heaedr-link' do
          %i.fas.fa-users
          %b ユーザー一覧
      %li
        = link_to admin_posts_path, class: 'nav-link text-dark heaedr-link' do
          %i.fas.fa-user-friends
          %b 投稿一覧
      %li
        = link_to tags_list_admin_posts_path, class: 'nav-link text-dark heaedr-link' do
          %i.fas.fa-clipboard-check
          %b タグ一覧
      %li
        = link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-dark heaedr-link' do
          %i.fas.fa-sign-in-alt
          %b ログアウト
    - else
      %li
        = link_to about_path, class: 'nav-link text-dark heaedr-link' do
          %i.fas.fa-question-circle
          %b About
      %li
        = link_to posts_path, class: 'nav-link text-dark heaedr-link' do
          %i.fas.fa-horse-head
          %b 投稿一覧
      %li
        = link_to new_user_registration_path, class: 'nav-link text-dark heaedr-link' do
          %i.fas.fa-user-plus
          %b 新規登録
      %li
      %li
        = link_to new_user_session_path, class: 'nav-link text-dark heaedr-link' do
          %i.fas.fa-sign-in-alt
          %b ログイン
  %ul.navbar-nav
    = form_with url: search_path, method: :get do |f|
      .h-100
        .searchbar
          = f.text_field :content, class: "search_input", placeholder: "投稿・ユーザー検索..."
          = f.button :type => "submit", style: 'border-style: none; background: none;', class: "search_icon" do
            %i.fas.fa-search