<% if controller.action_name == 'destroy' %>
  $('#comment_lists').html("<%= j(render 'admin/comments/admin_post_comment', comments: @comments) %>");
<% else %>
  $('#comment_lists').append("<%= j(render 'admin/comments/admin_post_comment', comments: @comments) %>");
  $('#view_more').replaceWith("<%= j(link_to_next_page(@comments, 'もっと見る', remote: true, id: 'view_more')) %>");
<% end %>
$('#comment-flash').html("<%= j(render 'layouts/notice') %>");