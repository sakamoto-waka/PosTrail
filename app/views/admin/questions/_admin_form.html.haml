= form_with model: question, url: admin_question_path(question), method: :patch do |f|
  = render 'layouts/errors', obj: question
  .col-md-9.col-lg-7.mx-auto
    .divise-form
      .devise-label.col-md-4
        = f.label :乗馬経験（年数）
      .my-auto
        = question.riding_experience
    .divise-form
      .devise-label.col-md-4
        = f.label :カテゴリー
      = f.select :category, Question.categories.keys.map{ |k| [I18n.t("enums.question.category.#{k}"), k] }
    .divise-form
      .devise-label.col-md-4
        = f.label :title, '質問タイトル'
      = f.text_field :title
    .divise-form
      .devise-label.col-md-4
        = f.label :質問内容
      = f.text_area :content
    .divise-form
      .devise-label.col-md-4
        = f.label :回答
      = f.text_area :answer
    .divise-form
      .devise-label.col-md-4
        = f.label :is_answered, '公開／非公開'
      = f.select :is_answered, [['公開', true], ['非公開', false]], { selected: question.is_answered }  
    .actions.text-center.mt-5
      = button_tag type: 'submit', class: "basic-button font-weight-bold my-4" do
        = '回答'
