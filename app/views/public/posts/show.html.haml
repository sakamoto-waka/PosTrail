.row
  .mx-auto
    %h1 投稿詳細
  .new-post-button
    = link_to new_post_path do
      %i.fas.fa-plus
.col-lg-9.mx-auto
  = render 'public/posts/post_show', post: @post, comment: @comment
  - unless current_page?(search_path)
    .comment-respond
      .comment-form
        = render 'public/comments/comment_form', post: @post, comment: @comment unless admin_signed_in? || current_user.name == "ゲストユーザー"
      #comment_lists
        = render 'public/comments/post_comment', comments: @comments, comment: @comment
        .col-4.mx-auto.more-comments
          = paginate @comments