- if post.trail_image.attached?
  = image_tag post.get_trail_image(100, 100)
= post.user.email
= post.trail_place
= simple_format(post.body)

- unless current_page?(search_path)
  = render 'public/comments/comment_form', post: post, comment: comment unless admin_signed_in?
  = render 'public/comments/post_comment', post: post