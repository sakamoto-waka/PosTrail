= form_with model: post do |f|
  = render 'layouts/errors', obj: post
  .form_group
    = f.label :ベストショット
    = f.file_field :trail_image, accept: 'image/*'
  .form_group
    = f.label :クラブ名
    = f.text_field :trail_place, class: "form_control"
  .form_group
    = f.label :投稿文
    = f.text_area :body, class: "form_control"
  .form_group
    = f.label :タグ
    = f.text_field :tag, value: post.tags.pluck(:name), class: "form_control"

  .form_group
    = f.submit '投稿', class: "btn btn-outline-dark font-weight-bold form-button-common mr-5"