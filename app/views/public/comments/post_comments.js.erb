<% if controller.action_name == 'create' || 'destroy' %>
  $('#comment_lists').html("<%= j(render 'public/comments/post_comment', comments: @comments) %>");
  $('textarea').val('');
<% else %>
  <% debugger %>
  $('#comment_lists').append("<%= j(render 'public/comments/post_comment', comments: @comments) %>");
  $('#view_more').replaceWith("<%= j(link_to_next_page(@comments, 'もっと見る', remote: true, id: "view_more")) %>");
<% end %>
$('#comment-flash').html("<%= j(render 'layouts/notice') %>");
$('#error-message').html("<%= j(render "layouts/errors", obj: @comment) %>");